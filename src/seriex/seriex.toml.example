# seriex 配置示例（TOML）
# 复制为 `seriex.toml` 放到工作目录，或在 pyproject.toml 的 [tool.seriex] 下配置相同键。

# 支持参与系列归类的文件扩展名（大小写不敏感，带或不带点均可）
# 默认含：mp4、nov、zip 以及常见漫画压缩格式（rar/7z/cbz/cbr）
formats = [
  "mp4", "nov", "zip",
  "rar", "7z", "cbz", "cbr"
]

# 其中需要进行完整性检测的归档格式（会用 7z t 检测）
# 必须是 formats 的子集
archive_formats = ["zip", "rar", "7z", "cbz", "cbr"]

# 可选：从指定目录读取其一级子文件夹名称作为“已知系列名”
# - 当文件名包含这些系列名时，将优先按该系列归类
# - 支持单路径或数组（若两者皆提供，会合并）
# known_series_dir = "D:/Your/SeriesLibrary"
# known_series_dirs = [
#   "D:/Your/SeriesLibrary",
#   "E:/Another/SeriesRoot"
# ]
